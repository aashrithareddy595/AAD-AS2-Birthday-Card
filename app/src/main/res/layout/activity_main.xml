<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFF8E1">

    <TextView
        android:id="@+id/greetingTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="Happy Birthday!"
        android:textSize="24sp"
        android:textColor="#FF4081"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/birthdayImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/greetingTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:src="@drawable/birthday" />

    <TextView
        android:id="@+id/messageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/birthdayImageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="Wishing you all the best on your special day!"
        android:textSize="18sp"
        android:textColor="#3F51B5" />

    <Button
        android:id="@+id/changeMessageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/messageTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="Change Message"
        android:backgroundTint="#FF4081"
        android:textColor="#FFFFFF" />

</RelativeLayout>
